{
    "name": "enjoys/cookie",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Enjoys",
            "email": "deadly.info@gmail.com"
        }
    ],
    "require": {
        "php": ">= 8.0",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Enjoys\\Cookie\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Enjoys\\Cookie\\": "tests"
        }
    },
    "scripts": {
        "phpcs-fix": "phpcbf --standard=PSR12 src/",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpstan": "phpstan analyse -l 8  src/",
        "psalm": "psalm --show-info=true src/",
        "phpmetrics": "phpmetrics --report-html=build/phpmetrics src/",
        "test": "phpunit tests"
    },
    "require-dev": {
        "httpsoft/http-server-request": "^1.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7",
        "symfony/var-dumper": "^v5.3"
    }
}
